# Branch Emergency Loans - URL Rewrite Rules
# Enables clean URLs like /api/basicdetails instead of /index.php?action=basicdetails

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Set base directory - use / for production, /branchkenya/ for local dev
    RewriteBase /

    # Handle CORS preflight OPTIONS requests at Apache level
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=204,L]

    # Don't rewrite requests for actual files or directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Rewrite /api/action to index.php?action=action
    RewriteRule ^api/([a-zA-Z0-9_]+)/?$ index.php?action=$1 [QSA,L]

    # Rewrite /action to index.php?action=action (alternative without /api prefix)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([a-zA-Z0-9_]+)/?$ index.php?action=$1 [QSA,L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"

    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"

    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"

    # CORS Headers - required for cross-origin API requests
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Admin-Key, x-admin-key"
    Header always set Access-Control-Max-Age "86400"
</IfModule>

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(env|log|sql|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Allow access to specific files
<FilesMatch "^(README\.md|FUNCTIONALITY\.md)$">
    Order deny,allow
    Allow from all
</FilesMatch>

# PHP Settings (if applicable)
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 60
    php_value memory_limit 128M
</IfModule>

# Error handling
ErrorDocument 404 /index.php
ErrorDocument 500 /index.php
